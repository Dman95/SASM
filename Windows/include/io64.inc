%macro ___GET_NUM_COMMON 4.nolist
    ___MAKE_FORMAT_STR %1, %3, %%fmt        
    jmp %%after_data
section .data
    %%read_tmp dq 0
    %%tmp dq 0
    %%addr_expr_tmp dd 0
    %%rax_tmp dd 0
section .text
    %%after_data:
    IS_GPR %2
%if %$is_reg = 1
; register
    %ifidni %2, rsp
        %error "Won't read to rsp!" 
    %elifidni %2, esp
        %error "Won't read to esp!" 
    %elifidni %2, sp
        %error "Won't read to sp!"
    %elifidni %2, spl
        %error "Won't read to sp!" 
    %endif
    %if %$reg_size < %1
        %error "Too small register for requested data"
    %endif
; we will have to do postprocessing after scanf
    pushfq
    push rax
    push rcx
    push rdx
    push r8
    push r9
    push r10
    push r11
    mov rdx, %%read_tmp
    ALIGN_STACK
%elifid %2
; variable (hope so)
; we will have to do postprocessing after scanf
    pushfq
    push rax
    push rcx
    push rdx
    push r8
    push r9
    push r10
    push r11
    mov rdx, %%read_tmp
    ALIGN_STACK
%elifnum %2
    %error "Incorrect parameter (number)"
%elifstr %2
    %error "Incorrect parameter (string)"
%else
; may be, address expression?
; we will have to do postprocessing after scanf
    mov [%%rax_tmp], rax
    lea rax, %2
    mov [%%addr_expr_tmp], rax
    mov rax, [%%rax_tmp]
    pushfq
    push rax
    push rcx
    push rdx
    push r8
    push r9
    push r10
    push r11
    ALIGN_STACK
    mov rdx, %%read_tmp
%endif
    mov rcx, %%fmt
    call scanf
    UNALIGN_STACK
%if %$is_reg = 1
    ; register postprocessing
    pop r11
    pop r10
    pop r9
    pop r8
    pop rdx
    pop rcx
    pop rax
    popfq
    %if %$reg_size = %1
        mov %2, [%%read_tmp]
    %else ; extend bytes 1 -> 2, 1 -> 4, 1 -> 8, 2 -> 4, 2 -> 8, 4 -> 8
        %if %1 = 1
            %4 %2, byte [%%read_tmp]
        %elif %1 = 2
            %4 %2, word [%%read_tmp]
        %else ; 4
            movsx %2, dword [%%read_tmp]
            %ifidni %4, movzx
                pushfq
                shl %2, 32
                shr %2, 32
                popfq
            %endif
        %endif
    %endif
%elifid %2
    ; variable (hope so) postprocessing
    %if %1 = 1
        mov cl, byte [%%read_tmp]
        mov byte [%2], cl
    %elif %1 = 2
        mov cx, word [%%read_tmp]
        mov word [%2], cx
    %elif %1 = 4
        mov ecx, dword [%%read_tmp]
        mov dword [%2], ecx
    %else
        mov rcx, qword [%%read_tmp]
        mov qword [%2], rcx
    %endif

    pop r11
    pop r10
    pop r9
    pop r8
    pop rdx
    pop rcx
    pop rax
    popfq
%else
    ; may be, address expression? postprocessing
    mov rax, [%%addr_expr_tmp]
    %if %1 = 1
        mov cl, byte [%%read_tmp]
        mov byte [rax], cl
    %elif %1 = 2
        mov cx, word [%%read_tmp]
        mov word [rax], cx
    %elif %1 = 4
        mov ecx, dword [%%read_tmp]
        mov dword [rax], ecx
    %else
        mov rcx, qword [%%read_tmp]
        mov qword [rax], rcx
    %endif
    
    pop r11
    pop r10
    pop r9
    pop r8
    pop rdx
    pop rcx
    pop rax
    popfq
%endif
    %pop ; IS_REG
%endmacro

