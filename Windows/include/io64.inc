; Make stack be 16 bytes aligned and reserve 32 byte space for parameters
%macro ALIGN_STACK 0.nolist
    enter 0, 0
    sub rsp, 32
    and rsp, 0xfffffffffffffff0
%endmacro

%macro UNALIGN_STACK 0.nolist
    leave
%endmacro

%macro FFLUSH_STDOUT 0.nolist
    ALIGN_STACK
    call get_stdout
    mov rcx, rax
    call fflush
    UNALIGN_STACK
%endmacro

